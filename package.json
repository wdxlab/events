{
  "name": "@wdxlab/events",
  "version": "2.0.0-beta.2",
  "description": "Rightly typed event emitter",
  "main": "dist/cjs",
  "module": "dist/esm",
  "types": "dist/types",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "LICENSE.md",
    "dist"
  ],
  "scripts": {
    "build": "npm run build:es6 && npm run build:cjs && npm run build:types",
    "build:es6": "swc ./src -C module.type=es6 -d dist/es6 --strip-leading-paths",
    "build:cjs": "swc ./src -C module.type=commonjs -d dist/cjs --strip-leading-paths",
    "build:types": "tsc",
    "fix": "npm run lint -- --fix",
    "lint": "eslint . --ext '.ts' --ext '.js' --cache",
    "test": "jest",
    "test:jest": "jest",
    "test:watch": "npm run test:jest -- --watch",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wdxlab/events"
  },
  "author": {
    "name": "Serget Melyukov",
    "url": "https://twitter.com/smelukov"
  },
  "bugs": {
    "url": "https://github.com/wdxlab/events/issues"
  },
  "homepage": "https://github.com/wdxlab/events",
  "dependencies": {},
  "devDependencies": {
    "@swc/jest": "^0.2.36",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.4.14",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
