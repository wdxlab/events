{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "dom"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./dist/esm",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
